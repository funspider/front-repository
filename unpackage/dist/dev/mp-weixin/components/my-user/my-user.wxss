.my-userinfo-container {
  height: 100%;
  background-color: #F4F4F4;
}
.my-userinfo-container .top-box {
  background-color: #C00000;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.my-userinfo-container .top-box .avatar {
  width: 90px;
  height: 90px;
  border: 2px solid #FFF;
  box-shadow: 0 1px 5px black;
}
.my-userinfo-container .top-box .nickname {
  font-size: 16px;
  color: #FFF;
  font-weight: bold;
  margin-top: 10px;
}
.panel-list {
  padding: 0 10px;
  position: relative;
  top: -10px;
}
.panel-list .pane1 {
  background-color: white;
  border-radius: 3px;
  margin-bottom: 8px;
}
.panel-list .pane1 .pane1-title {
  line-height: 45px;
  padding-left: 10px;
  font-size: 15px;
  border-bottom: 1px solid #f4f4f4;
}
.panel-list .pane1 .pane1-body {
  display: flex;
  justify-content: space-around;
}
.panel-list .pane1 .pane1-body .pane1-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10px 0;
  font-size: 13px;
}
.panel-list .pane1 .pane1-body .icon {
  width: 35px;
  height: 35px;
}
.pane1-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  padding: 0 10px;
  line-height: 45px;
}

